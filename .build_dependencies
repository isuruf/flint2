#! /bin/sh
absolute_path(){
   dirlist="$1"
   retval=""
   for dir in $dirlist; do
      case $dir in
        /*) dir=$dir;;
        *) dir=$PWD/$dir;;
      esac
      retval=$retval" "$dir
   done
   echo $retval
}

wget http://mpir.org/mpir-3.0.0.tar.bz2
tar -xf mpir-3.0.0.tar.bz2
cd mpir-3.0.0
./configure ABI=$ABI --enable-gmpcompat
make -j4 > /dev/null 2>&1
cd ..
wget http://www.mpfr.org/mpfr-current/mpfr-3.1.5.tar.bz2
tar -xf mpfr-3.1.5.tar.bz2
cd mpfr-3.1.5
./configure ABI=$ABI --with-gmp-build=$(absolute_path "../mpir-3.0.0")
make -j4 > /dev/null 2>&1
cd ..

echo "int flint_test_multiplier(){return 1;}" > test_helpers.c

