#! /bin/sh
absolute_path(){
   dirlist="$1"
   retval=""
   for dir in $dirlist; do
      case $dir in
        /*) dir=$dir;;
        *) dir=$PWD/$dir;;
      esac
      retval=$retval" "$dir
   done
   echo $retval
}

mkdir deps
deps_dir=`pwd`/deps

wget http://mpir.org/mpir-2.7.2.tar.bz2
tar -xf mpir-2.7.2.tar.bz2
cd mpir-2.7.2
./configure ABI=$ABI --enable-gmpcompat --prefix=$deps_dir
make -j4
make install
cd ..

wget http://www.mpfr.org/mpfr-current/mpfr-3.1.5.tar.bz2
tar -xf mpfr-3.1.5.tar.bz2
cd mpfr-3.1.5
./configure ABI=$ABI  --prefix=$deps_dir --with-gmp=$deps_dir
make -j4
make install
cd ..

echo "int flint_test_multiplier(){return 1;}" > test_helpers.c

